<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="external_layout_ps_header_ou">
        <div class="header">
            <div class="row">
                <div class="row backgroundimage">
                    <img
                        t-if="o.operating_unit_id.logo"
                        t-att-src="'data:image/png;base64,%s' % o.operating_unit_id.logo.decode('utf8')"
                    />
                </div>
            </div>
        </div>
        <div
            class="article o_report_layout_standard"
            t-att-data-oe-model="o and o._name"
            t-att-data-oe-id="o and o.id"
            t-att-data-oe-lang="o and o.env.context.get('lang')"
        >
            <t t-call="web.address_layout" />
            <t t-raw="0" />
        </div>
    </template>
    <template id="external_layout_ps">
        <t t-if="not o" t-set="o" t-value="doc" />
        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id" />
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()" />
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company" />
            </t>
        </t>
        <t t-call="ps_account.external_layout_ps_header_ou">
            <t t-raw="0" />
        </t>
    </template>
</odoo>
