<odoo>
    <data noupdate="1">
        <record id="group_hr_expense_partner" model="res.groups">
            <field name="name">Partner</field>
            <field
                name="implied_ids"
                eval="[(4, ref('hr_expense.group_hr_expense_user'))]"
            />
            <field
                name="category_id"
                ref="base.module_category_human_resources_employees"
            />
        </record>
        <record id="base.user_root" model="res.users">
            <field name="groups_id" eval="[(4, ref('group_hr_expense_partner'))]" />
        </record>
    </data>
</odoo>
